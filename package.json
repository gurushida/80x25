{
  "name": "80x25",
  "version": "0.0.1",
  "description": "A terminal point-and-click game",
  "main": "80x25.js",
  "scripts": {
    "check": "npx tsc --noEmit",
    "compileResources": "esbuild --outfile=compileResources.js --target=node14 --banner='#!/usr/bin/env node' --bundle --platform=node --minify --tsconfig=./tsconfig.json src/resources/compileResources.ts && chmod a+x compileResources.js && ./compileResources.js",
    "build": "esbuild --outfile=80x25.js --target=node14 --banner='#!/usr/bin/env node' --bundle --platform=node --minify --tsconfig=./tsconfig.json src/main.ts --external:blessed && chmod a+x 80x25.js",
    "pkg-mac": "pkg -t macos 80x25.js -o 80x25",
    "pkg-linux": "pkg -t linux 80x25.js -o 80x25-linux",
    "pkg-win": "pkg -t win 80x25.js -o 80x25.exe"
  },
  "dependencies": {
    "@types/blessed": "^0.1.17",
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "esbuild": "^0.8.42",
    "pkg": "^4.4.8",
    "typescript": "^4.1.3"
  }
}
